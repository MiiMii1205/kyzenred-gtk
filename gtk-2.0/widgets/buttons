style "button_label" {
  fg[NORMAL] = @button_fg_color
  fg[PRELIGHT] = @button_fg_color
  fg[ACTIVE] = mix(0.5, mix(0.5, @base_color, @button_active), @button_fg_color)
  fg[INSENSITIVE] = @button_insensitive_fg_color

  font_name = "Medium"
}

